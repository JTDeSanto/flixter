<br />

<div class="booyah-box col-10 offset-1 dashboard text-center">
  <div class="frosty booyah-box text-center">
    <h1 ><%= current_user.first_name %>'s Dashboard</h1>
  </div>
  <hr />
  <% if current_user.enrolled_courses == true %>
  <h2>What I'm Learning</h2>
    <% current_user.enrolled_courses.each do |course| %>
      <h3 class="text-center">
        <%= link_to course.title, course_path(course) %>
        </h3>
        <br />
        <%= image_tag course.image, class: 'img-fluid' %>
        <br />
        <br />
        <div class="row">
          <div class="col-12 col-sm-8 ">
            <%= course.description %>
            <br />
            
          </div>
          <div class="col-12 col-sm-4 text-center">
            <%= link_to 'More Info...', course_path(course), class: 'btn btn-lg btn-primary' %>
          </div>
        </div>
        <hr class="col-8 offset-2 ">
        <br class="clr" />
      <% end %>
      <% else %>
      <h2>I'm not currently enrolled.</h2>
      <br />
      <%= link_to 'Start Learning', courses_path, class: 'btn btn-primary' %>
    <%end %>  

      <hr />

    <% if current_user.courses.any? != false %>
      
      <h2>What I'm Teaching</h2>
      <% current_user.courses.each do |course| %>
      <h3 class="text-center">
        <%= link_to course.title, course_path(course) %>
      </h3>
      <br />
      <%= image_tag course.image, class: 'img-fluid' %>
      <br />
      <br />
      <div class="row">
        <div class="col-12 col-sm-8">
          <%= course.description %>
        </div>
        <div class="col-12 col-sm-4 text-center">
          <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary' %>
      </div>
      <hr class="col-8 offset-2">
      <br class="clr" />
      <% end %>

      <% else %>
      <h2>I'm not currently teaching.</h2>
      <br />
      <%= link_to 'Become an Instructor', new_instructor_course_path, class: 'btn btn-primary' %>
    <%end %>  
</div>